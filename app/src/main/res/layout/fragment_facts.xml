<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    tools:viewBindingIgnore="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOptionDigit"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:paddingStart="4dp"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:text="@string/facts"
            android:textColor="@color/colorText"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/surname"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="text"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/name"
                    android:textColor="@color/colorText" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:minWidth="180dp"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/second_name"
                    android:textColor="@color/colorText" />

                <EditText
                    android:id="@+id/secondName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:minWidth="180dp"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/birthPlace"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/birthPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="text"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/placeOfLiving"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/placeOfLiving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:clickable="false"
            android:cursorVisible="false"
            android:inputType="text"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/livingStatus"
            android:textColor="@color/colorText" />

        <ViewSwitcher
            android:id="@+id/my_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/livingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:inputType="text"
                android:padding="10dp"/>

            <Spinner
                android:id="@+id/livingStatusEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:entries="@array/spinnerItems"
                android:minWidth="180dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimarySuperLight" />
        </ViewSwitcher>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/bithDate" />

        <EditText
            android:id="@+id/birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:clickable="false"
            android:cursorVisible="false"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimarySuperLight"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/time_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/link" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/like_anim2"
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/star" />

            <TextView
                android:id="@+id/inventoryNameItemTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Дело №"
                android:textColor="#8c8c8c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/inventoryFund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опись №"
                android:textColor="#8c8c8c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/inventoryNameItemTv"
                app:layout_constraintTop_toBottomOf="@+id/inventoryNameItemTv" />

            <TextView
                android:id="@+id/inventoryNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 "
                android:textColor="#8c8c8c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/inventoryNameItemTv"
                app:layout_constraintStart_toEndOf="@+id/inventoryNameItemTv"
                app:layout_constraintTop_toTopOf="@+id/inventoryNameItemTv" />

            <TextView
                android:id="@+id/inventoryFundNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 "
                android:textColor="#8c8c8c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/inventoryFund"
                app:layout_constraintStart_toEndOf="@+id/inventoryFund"
                app:layout_constraintTop_toTopOf="@+id/inventoryFund" />

            <TextView
                android:id="@+id/fundNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 "
                android:textColor="#8c8c8c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/fund"
                app:layout_constraintTop_toBottomOf="@+id/inventoryFund" />

            <TextView
                android:id="@+id/fund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фонд №"
                android:textColor="#8c8c8c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/inventoryFund"
                app:layout_constraintTop_toBottomOf="@+id/inventoryFund" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:text="@string/save"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>